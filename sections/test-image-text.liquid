{{ 'section-test-image-text.css' | asset_url | stylesheet_tag }}

<div class="section__test-image-text">
  {%- if section.settings.image -%}
    {{ 
      section.settings.image
      | image_url: width: '900'
      | image_tag: loading: 'lazy', class: 'test-image-text__image'
    }}
  {%- else -%}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Test Image w/ Text",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Vacay This Way",
      "label": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "subtitle",
      "default": "Everything you need for your summer get away!",
      "label": "Subtitle"
    },
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Test Image w/ Text"
    }
  ]
}
{% endschema %}
