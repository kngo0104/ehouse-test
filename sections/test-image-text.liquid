{{ 'section-test-image-text.css' | asset_url | stylesheet_tag }}

<div class="section__test-image-text">
  <div class="test-image-text__image-container">
  </div>
  <div class="test-image-text__content">
    <div class="content__inner">
      {%- if section.settings.heading -%}
      <h4>{{ section.settings.heading }}</h4>
      {%- endif -%}

      {%- if section.settings.subtitle -%}
      <span>{{ section.settings.subtitle }}</span>
      {%- endif -%}
      
      <a href="{{ section.settings.link }}">{{ section.settings.text }}</a>
    </div>
  </div>
</div>

{% style %}
  .test-image-text__image-container {
    background-image: url({{ section.settings.image | image_url: width: '900' }});
  }
{% endstyle %}
{% schema %}
{
  "name": "Test Image w/ Text",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Vacay This Way",
      "label": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "subtitle",
      "default": "Everything you need for your summer get away!",
      "label": "Subtitle"
    },
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Test Image w/ Text"
    }
  ]
}
{% endschema %}
